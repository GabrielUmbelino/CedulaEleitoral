<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <ImageView
        android:id="@+id/candidate_photo"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="1dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#a4a4a4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/candidate_party" />
    <TextView
        android:id="@+id/candidate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/candidate_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="11dp"/>

    <TextView
        android:id="@+id/candidate_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="4dp"
        android:textSize="14dp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/candidate_photo"
        app:layout_constraintTop_toBottomOf="@+id/candidate_name" />

    <Button
        android:id="@+id/candidate_number"
        android:layout_width="wrap_content"
        android:minWidth="36dp"
        android:layout_height="21dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#fff"
        app:layout_constraintStart_toEndOf="@+id/candidate_party"
        app:layout_constraintTop_toBottomOf="@+id/candidate_name"
        android:background="@drawable/button_candidate_number"/>



</android.support.constraint.ConstraintLayout>