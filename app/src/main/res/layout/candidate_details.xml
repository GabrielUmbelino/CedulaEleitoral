<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/rick_sanchez"/>
    <Button
        android:id="@+id/btn_number"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/button_candidate_number"
        android:text="137"
        android:textColor="#fff"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_image" />

    <View
        android:id="@+id/divider_president"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#a4a4a4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_number" />
    <TextView
        android:id="@+id/president_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/president"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="18sp"
        android:paddingTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/divider_president"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rick Sanchez"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/president_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="15dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
    />
    <View
        android:id="@+id/divider_vice"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#C7C7C7"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/vice_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/vice"
        android:paddingTop="10dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/divider_vice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        />
    <TextView
        android:id="@+id/txt_vice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Morty Sanchez"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/vice_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="15dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        />

    <View
        android:id="@+id/divider_party"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#C7C7C7"
        app:layout_constraintTop_toBottomOf="@+id/txt_vice"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/party_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/party"
        android:paddingTop="10dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/divider_party"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        />
    <TextView
        android:id="@+id/txt_party"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PWD"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/party_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="15dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#C7C7C7"
        app:layout_constraintTop_toBottomOf="@+id/txt_party"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_vote"
        android:text="@string/vote"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="31dp"
        android:textColor="#ffffff"
        android:background="#38DB7D"/>
</android.support.constraint.ConstraintLayout>